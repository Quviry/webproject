<%= form_with(model: user, url: register_path, html: {method: :post}) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h4>Ошибки при создании пользователя: </h4>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group py-2">
    <%= form.label :email, "Email address", style: "display: block" %>
    <%= form.email_field :email, class: "form-control", aria_describedby: "emailHelp", placeholder: "Enter email" %>
    <small id="emailHelp" class="form-text text-muted">We'll use email to verify your personality.</small>
  </div>

  <div class="form-group py-2">
    <%= form.label :password, "Password", style: "display: block" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary my-3" %>
  </div>
<% end %>
