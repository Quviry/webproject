<%= turbo_frame_tag "summary_episode_turbo_frame", class: "d-flex align-items-center px-2" do %>
    <%= image_tag @episode.thumbnail.variant(resize_to_limit: [36, 36]), class: "img-thumbnail", height: 36, width: 36 %>
    <%= tag.div class: "mx-2" do %>
        <%= tag.div @episode.title %>
        <%= tag.div episode_summary_stat(@episode) %>
    <% end %>
<% end %>
